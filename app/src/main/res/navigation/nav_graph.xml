<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/onBordFragment"
        android:name="com.example.a3hm_3.ui.main.on_board.OnBordFragment"
        android:label="fragment_on_bord"
        tools:layout="@layout/fragment_on_bord">

        <action
            android:id="@+id/action_onBordFragment2_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/onBordFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.a3hm_3.ui.main.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.a3hm_3.ui.main.main.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_onBordFragment"
            app:destination="@id/onBordFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>